  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.Type_Of_Building %></td>
        <td><%= quote.Number_Of_Apartments %></td>
        <td><%= quote.Number_Of_Floors %></td>
        <td><%= quote.Number_Of_Basements %></td>
        <td><%= quote.Number_Of_Companies %></td>
        <td><%= quote.Number_Of_Parking_Spots %></td>
        <td><%= quote.Number_Of_Elevator_Cages %></td>
        <td><%= quote.Maximum_Occupants_Per_Floor %></td>
        <td><%= quote.Number_Of_Hours_Of_Activity_In_The_Building %></td>
        <td><%= quote.Number_Of_Elevator %></td>
        <td><%= quote.Range %></td>
        <td><%= quote.Unit_Price %></td>
        <td><%= quote.Total_Price %></td>
        <td><%= quote.Installation_Fees %></td>
        <td><%= Final_Price %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

